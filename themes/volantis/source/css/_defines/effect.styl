@require('func')
// shadow
$boxshadow-card = 0 1px 2px 0px rgba(0, 0, 0, 0.1)
$boxshadow-card-float = 0 4px 12px 12px rgba(7,17,27,.15)
$boxshadow-float = 0 4px 12px 12px rgba(7,17,27,.15)

$textshadow = 0 1px 2px 0px rgba(0, 0, 0, 0.1)


.blur
  @supports (backdrop-filter: blur(20px))
    background: alpha($color-card, .9) !important
    backdrop-filter: saturate(200%) blur(20px)


.shadow
  box-shadow: $boxshadow-card
  &.floatable
    trans()
    &:hover
      box-shadow: $boxshadow-card-float
