<article class="post white-box <%- theme.style.body.effect.join(' ') %> reveal <%= (post.title) ? "" : "no-title" %>">
  <% if (post.photoo) { %>
    <div class="post_cover">
      <a href="<%= url_for(post.link || post.path) %>" title="<%= post.title %>">
        <img class="post_bg loaded" onerror="this.onerror=null;this.src='https:\/\/www.flexiston.com\/img\/404.jpg'" alt="<%= post.title %>" data-ll-status="loaded"
          src="<%= post.photourl %>">
      </a>
    </div>
  <% } %>
  <div class="post_info">
    <%- partial('meta',{post:post, position:'header'}) %>
    <section class="article typo">
      <div class="article-entry" itemprop="articleBody">
        <%- post.excerpt || post.description || post.content %>
        <% if (theme.layout.on_list.readmore) { %>
          <% if ((post.readmore != false) && (post.excerpt || post.description || post.link)) { %>
            <div class="button readmore">
              <a href="<%- url_for(post.link || post.path) %>">
                <%- theme.layout.on_list.readmore %>
              </a>
            </div>
          <% } %>
        <% } %>
      </div>
    </section>
  </div>
</article>
